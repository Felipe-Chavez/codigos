    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here: Introducir codigo Aqui
        
      int valor = Integer.parseInt(numero.getText());
      int m= valor -1;
      tabla.setModel(tbl);
      tbl.setColumnCount(valor);
      tbl.setRowCount(valor);
      int cont =1;
      for(int i = 0; i< valor; i++){
      
          for(int j = 0; j<valor; j++){
              if(i==0 || i ==m || m -i==j){
                  tbl.setValueAt(cont, i, j);
              }
              else{
              tbl.setValueAt(0, i, j);
              }
              
          }
      }
        
        
        
    }                                        

