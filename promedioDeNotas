    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:<-----------Boton CALCULAR
        
        String nom = nombre.getText();
        int p1, p2, p3, total;
        p1 = Integer.parseInt(primero.getText());
        p2 = Integer.parseInt(segundo.getText());
        p3 = Integer.parseInt(tercero.getText());
        if(p1>30){
            JOptionPane.showMessageDialog(null,"Tiene que introducir valores menores a 30");
        }
        else{
            total = p1+p2+p3;
            if(total>50){
                resultado.setText(nom + "Aprobo con  "+ total);
                JOptionPane.showMessageDialog(null, nom+ "Aprobo con "+ total);
            }
            else{
                resultado.setText(nom + "Reprobo con  "+ total);
                JOptionPane.showMessageDialog(null, nom+ "Reprobo con "+ total);
            }
        }
        
        
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:<-------BOTON LIMPIAR
